@model csharp_bibliotecaMvc.Models.Libro

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Libro</h4>
    <hr />
    <dl class="row">

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titolo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titolo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Scaffale)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Scaffale)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Stato)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stato)
        </dd>

        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Date Prestito</th>
                    <th>Utente</th>
                </tr>
                @foreach (var item in Model.Prestiti)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.PrestitoDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UtenteID)
                        </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.LibroID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
